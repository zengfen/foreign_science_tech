<% provide(:title, "Host") %>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>错误信息</h5>
        </div>

        <div class="ibox-content pl15">
          <div class="bg-search">
          </div>
        </div>
        <div id="result_release">
          <div class="ibox-content table-sql">
            <ul class="tab-ul clear-p">
              <li class="tab-li active">
                <a href="#" data-target="all-page">数据接收器错误信息</a>
              </li>
            </ul>

            <div class="ibox-content p15-0 all-page table-content">
              <%if !@receiver_errors.blank?%>
                <table class="table table-striped table-bordered table-hover table-vcenter">
                  <thead>
                    <tr>
                      <th class="text-center">主机IP</th>
                      <th class="text-center">时间</th>
                      <th class="text-center">错误信息</th>
                    </tr>
                  </thead>
                  <tbody class="text-center">
                    <% @receiver_errors.each do |k,v| %>
                      <tr>
                        <td><%= k %></td>
                        <% if v.blank? %>
                          <td></td>
                          <td></td>
                        <% else %>
                          <td><%= JSON.parse(v)["ts"] %></td>
                          <td><%= JSON.parse(v)["content"] %></td>
                        <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
          </div>
        </div>


        <div id="result_release">
          <div class="ibox-content table-sql">
            <ul class="tab-ul clear-p">
              <li class="tab-li active">
                <a href="#" data-target="all-page">数据Loader消费错误信息</a>
              </li>
            </ul>

            <div class="ibox-content p15-0 all-page table-content">
              <%if !@comsume_errors.blank?%>
                <table class="table table-striped table-bordered table-hover table-vcenter">
                  <thead>
                    <tr>
                      <th class="text-center">主机IP</th>
                      <th class="text-center">时间</th>
                      <th class="text-center">错误信息</th>
                    </tr>
                  </thead>
                  <tbody class="text-center">
                    <% @comsume_errors.each do |k,v| %>
                      <tr>
                        <td><%= k %></td>
                        <% if v.blank? %>
                          <td></td>
                          <td></td>
                        <% else %>
                          <td><%= JSON.parse(v)["ts"] %></td>
                          <td><%= JSON.parse(v)["content"] %></td>
                        <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
          </div>
        </div>


        <div id="result_release">
          <div class="ibox-content table-sql">
            <ul class="tab-ul clear-p">
              <li class="tab-li active">
                <a href="#" data-target="all-page">数据Loader插入ES错误信息</a>
              </li>
            </ul>

            <div class="ibox-content p15-0 all-page table-content">
              <%if !@load_errors.blank?%>
                <table class="table table-striped table-bordered table-hover table-vcenter">
                  <thead>
                    <tr>
                      <th class="text-center">主机IP</th>
                      <th class="text-center">时间</th>
                      <th class="text-center">错误信息</th>
                    </tr>
                  </thead>
                  <tbody class="text-center">
                    <% @load_errors.each do |k,v| %>
                      <tr>
                        <td><%= k %></td>
                        <% if v.blank? %>
                          <td></td>
                          <td></td>
                        <% else %>
                          <td><%= JSON.parse(v)["ts"] %></td>
                          <td><%= JSON.parse(v)["content"] %></td>
                        <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
          </div>
        </div>


      </div>
    </div>
  </div>
</div>

