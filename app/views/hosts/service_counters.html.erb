<% provide(:title, "Host") %>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>数量统计</h5>
        </div>

        <div class="ibox-content pl15">
          <div class="bg-search">
          </div>
        </div>
        <div id="result_release">
          <div class="ibox-content table-sql">
            <ul class="tab-ul clear-p">
              <li class="tab-li active">
                <a href="#" data-target="all-page">数据接收器</a>
              </li>
            </ul>

            <div class="ibox-content p15-0 all-page table-content">
              <table class="table table-striped table-bordered table-hover table-vcenter">
                <thead>
                  <tr>
                    <th class="text-center">主机IP</th>
                    <th class="text-center">数量</th>
                  </tr>
                </thead>
                <tbody class="text-center">
                  <% @receiver_data.each do |k,v| %>
                    <tr>
                      <td><%= k %></td>
                      <td><%= v %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>


        <div id="result_release">
          <div class="ibox-content table-sql">
            <ul class="tab-ul clear-p">
              <li class="tab-li active">
                <a href="#" data-target="all-page">数据Loader</a>
              </li>
            </ul>

            <div class="ibox-content p15-0 all-page table-content">
              <table class="table table-striped table-bordered table-hover table-vcenter">
                <thead>
                  <tr>
                    <th class="text-center">主机IP</th>
                    <th class="text-center">消费数量</th>
                    <th class="text-center">写入ES数量</th>
                  </tr>
                </thead>
                <tbody class="text-center">
                  <% @loader_data.each do |k,v| %>
                    <tr>
                      <td><%= k %></td>
                      <td><%= v[0] %></td>
                      <td><%= v[1] %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>


      </div>
    </div>
  </div>
</div>

