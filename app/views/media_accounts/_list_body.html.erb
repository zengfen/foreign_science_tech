<%if !@media_accounts.blank?%>
  <table class="table table-striped table-bordered table-hover table-vcenter">
    <thead>
      <tr>
        <th class="text-center">名称</th>
        <th class="text-center">语言</th>
        <th class="text-center">类型</th>
        <th class="text-center">发行量</th>
        <th class="text-center">描述</th>
        <th class="text-center">线上最新发布日期</th>
        
      </tr>
    </thead>
    <tbody class="text-center">

      <% @media_accounts.each do |media_account| %>
       <%=render :partial=>"one_data_in_list",:locals=>{:media_account=>media_account}%>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @media_accounts%>
  </div>
<%else%>
   <%= render "shared/no_data" %>
<%end%>