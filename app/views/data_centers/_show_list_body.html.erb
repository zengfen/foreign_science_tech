<%if !@results.blank?%>
  <table class="table table-striped table-bordered table-hover table-vcenter">
    <thead>
      <tr>
        <th class="text-center">ID</th>
        <th class="text-center">网站</th>
        <th class="text-center">创建时间</th>
        <th class="text-center">插入时间</th>
        <th class="text-center">Title</th>
      </tr>
    </thead>
    <tbody class="text-center">
      <% @results.each do |record| %>
        <tr>
          <td><%= record.record.id %></td>
          <td><%= record.record.site%></td>
          <td><%= Time.at(record.record.created_time).to_s.gsub("+0800", "") rescue nil%></td>
          <td><%= Time.at(record.record.created_at).to_s.gsub("+0800", "") rescue nil%></td>
          <td><%= record.record.title%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @results %>
  </div>
<%else%>
  <%= render "shared/no_data" %>
<%end%>
