<%if @datas.present? %>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>序号</th>
        <th>标题</th>
        <th>作者</th>
        <th>发布时间</th>
        <th>网站</th>
        <th>爬虫名</th>
        <th>正文</th>
        <th>类别</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @datas.each_with_index do |x, index| %>
        <tr>
          <td><%= (@page - 1) * @per_page + index + 1 %></td>
          <td><%= x.con_title %></td>
          <td><%= x.con_author %></td>
          <td><%= x.con_time.strftime("%F %T") rescue nil %></td>
          <td><%= x.website_name %></td>
          <td><%= x.data_spidername %></td>
          <td><%= x.con_text[0..100] rescue '--' %></td>
          <td><%= x.category %></td>
          <td><a href="<%= data_center_path({id: x.data_id}) %>">查看</a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @datas%>
  </div>
<%else%>
  <%= render "shared/no_data" %>
<%end%>
