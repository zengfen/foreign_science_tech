<% provide(:title, "数据中心") %>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>数据列表</h5>
        </div>
        <div class="ibox-content pl15">
          <div class="bg-search">

          </div>
        </div>
        <div id="result_release">
          <div class="ibox-content table-sql">
            <ul class="tab-ul clear-p">
              <li class="tab-li active">
                <a href="#" data-target="all-page">[<%= params[:table_name] %>][<%= params[:id] %>]详情
                </a>
              </li>
            </ul>
            <div class="ibox-content p15-0 all-page table-content">
              <%if !@record.blank?%>
                <table class="table table-striped table-bordered table-hover table-vcenter">
                  <tbody class="text-center">
                    <% @record.each do |k, v| %>
                      <% if !v.is_a?(Hash) %>
                        <tr>
                          <td><%= k %></td>
                          <td><%= v %></td>
                        </tr>
                      <% else %>
                        <% v.each do |kk, vv| %>
                          <tr>
                            <td><%= k + "_" + kk %></td>
                            <td><%= vv %></td>
                          </tr>
                        <% end %>
                      <% end %>
                    <% end %>
                  </tbody>
                </table>
                <div class="text-center">
                </div>
              <%else%>
                <%= render "shared/no_data" %>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

