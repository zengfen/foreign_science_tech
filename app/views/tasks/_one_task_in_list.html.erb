<tr>
  <td><%= spider_task.special_tag%></td>
  <td><%= spider_task.spider.spider_name%></td>
  <td><%= spider_task.level %></td>
  <td><%= spider_task.keyword %></td>
  <td><%= raw status_html(spider_task)%></td>
  <td><%= spider_task.success_count %></td>
  <td><%= spider_task.fail_count %></td>
  <td><%= spider_task.warning_count %></td>
  <td><%= show_format_time(spider_task.created_at) %></td>
  <td>
    <% if spider_task.can_start? %>
      <%= link_to(start_spider_spider_task_path(spider_task.spider, spider_task),:title=>"启动",:class=>"label label-info") do %>
     <!--  <i class="fa fa-play"></i> -->
      启动
      <%end%>
    <% end %>

    <% if spider_task.can_stop? %>
      <%= link_to(stop_spider_spider_task_path(spider_task.spider, spider_task),:title=>"暂停",:class=>"label label-warning") do %>
      <!-- 	<i class="fa fa-pause"></i> -->
      暂停
      <%end%>
    <% end %>
  </td>
</tr>