<%spider_task.update_finished_status!%>
<td><%= truncate(spider_task.special_tag_names.join(","), :length => 15)%></td>
<td><%= spider_task.special_tag%></td>
<td><a href="/spiders/<%= spider_task.spider_id %>" target="_blank">
    <%= truncate(spider_task.spider.spider_name, :length => 15)%>
</a></td>
<td><a href="javascript:show_keyword('<%= spider_task.id %>')"><%= spider_task.keyword %></a></td>
<td class="task_status"><%= raw status_html(spider_task)%></td>
<td><%= spider_task.current_task_count || 0 %></td>
<td><%= spider_task.current_success_count || 0 %></td>
<td>
  <%=
   link_to_if((spider_task.current_fail_count || 0) != 0, (spider_task.current_fail_count || 0), fail_tasks_task_path(spider_task)) do
     "#{spider_task.current_fail_count || 0}"
   end
%>
</td>
<td><%= spider_task.current_warning_count || 0 %></td>
<td><a href="data_centers/show?table_name=<%= spider_task.tidb_table_name %>&tag_id=<%= spider_task.special_tag%>" ><%= (spider_task.current_result_count) || 0 %></a></td>
<td><%= show_format_time(spider_task.created_at) %></td>
<td class="pos-r">
  <a href="##">
    <i class="icon_data_analysis icon-more"></i>
  </a>
  <ul class="more-ul dn">
    <% if spider_task.can_start? %>
      <li class="bor-b">
        <%= link_to(start_spider_spider_task_path(spider_task.spider, spider_task),:title=>"启动",:remote=>true) do %>
          <!--  <i class="fa fa-play"></i> -->
          启动
        <%end%>
      </li>
    <% end %>
    <% if spider_task.can_stop?  %>
      <li class="bor-b">
        <%= link_to(stop_spider_spider_task_path(spider_task.spider, spider_task),:title=>"暂停",:remote=>true) do %>
          <!--  <i class="fa fa-play"></i> -->
          暂停
        <%end%>
      </li>
    <% end %>
    <li>
      <%=link_to(spider_spider_task_path(spider_task.spider, spider_task),:class=>"remove-line") do%>删除<%end%>
    </li>
  </ul>
</td>
