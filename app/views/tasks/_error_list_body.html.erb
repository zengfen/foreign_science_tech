<%if !@fail_tasks.blank?%>
  <table class="table table-striped table-bordered table-hover table-vcenter">
    <thead>
      <tr>
        <th class="text-center">链接</th>
        <th class="text-center">错误</th>
        <th class="text-center">重试次数</th>
        <th class="text-center">最大重试次数</th>
        <th class="text-center">操作</th>
      </tr>
    </thead>
    <tbody class="text-center">

      <% @fail_tasks.each do |fail_task| %>
      <tr id="fail_task_<%=fail_task['task_md5']%>">
       <%=render :partial=>"one_fail_task_in_list",:locals=>{:fail_task=>fail_task}%>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @detail_keys%>
  </div>
<%else%>
   <%= render "shared/no_data" %>
<%end%>
