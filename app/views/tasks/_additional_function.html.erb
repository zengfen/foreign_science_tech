<div class="form-group">
  <label class="col-sm-2 control-label">附加项</label>
  <div class="col-sm-10">
    <%additional_function.each do |n|%>
      <%n.each do |k,v|%>
        <% if v.count > 0 %>
          <%=select_tag("cate_#{k}",options_for_select(v,params["cate_#{k}"]),include_blank: "#{k}",:class=>"form-control")%>
        <%else%>
          <%=text_field_tag "cate_#{k}",nil,{:placeholder=>"#{k}",:class=>"form-control"}%>
        <%end%>
      <%end%>
    <%end %>
  </div>
</div>
<div class="hr-line-dashed"></div>