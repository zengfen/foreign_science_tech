<%if !@fail_tasks.blank?%>
  <table class="table table-striped table-bordered table-hover table-vcenter">
    <thead>
      <tr>
        <th class="text-center">采集信息</th>
        <th class="text-center">错误</th>
      </tr>
    </thead>
    <tbody class="text-center">

      <% @fail_tasks.each do |fail_task| %>
      <tr id="fail_task_<%=fail_task['task_md5']%>">
        <td  data-toggle="tooltip"  data-container="body" data-placement="bottom"><%= fail_task.content %><%#= truncate_utf(fail_task.content,30,"...")%></td>
        <td><%= fail_task.error_content %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @fail_tasks%>
  </div>
<%else%>
   <%= render "shared/no_data" %>
<%end%>
