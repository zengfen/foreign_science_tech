<td>
  <a href="/spiders/<%= spider_task.spider_id %>" target="_blank" title="<%=spider_task.spider.spider_name%>">
    <%= spider_task.spider.spider_name%>
  </a>
</td>
<td><%= spider_task.task_type_cn %></td>
<td class="task_status"><%= raw status_html(spider_task)%></td>
<td><%= spider_task.current_task_count %></td>
<td><%= spider_task.current_success_count || 0 %></td>
<td><%= spider_task.current_fail_count || 0 %></td>
<td>
  <li>
    <%= link_to(fail_tasks_spider_task_path(spider_task), :title => "报警") do %>报警
    <% end %>
  </li>
</td>
<td><%= show_format_time(spider_task.created_at) %></td>
<td class="pos-r">
  <a href="##">
    <i class="icon_data_analysis icon-more"></i>
  </a>
  <ul class="more-ul dn">
    <% if spider_task.status == SpiderTask::TypeTaskWait %>
        <li class="bor-b">
          <a href="/spider_tasks/start_task?id=<%= spider_task.id %>" class="start-line">启动</a>
        </li>
    <% end %>
    <% if spider_task.status == SpiderTask::TypeTaskStop %>
        <li class="bor-b">
          <a href="/spider_tasks/restart_task?id=<%= spider_task.id %>" class="start-line">重启</a>
        </li>
    <% end %>
    <% if spider_task.status == 1 %>
        <li class="bor-b">
          <a href="/spider_tasks/stop_task?id=<%= spider_task.id %>" class="stop-line">停止</a>
        </li>
    <% end %>
    <li class="bor-b">
      <%= link_to(spider_task_path(spider_task), :class => "remove-line") do %>删除
      <% end %>
    </li>
  </ul>
</td>

