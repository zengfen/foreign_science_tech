<% provide(:title, "Forgot password") %>
<div class="passwordBox animated fadeInDown">
    <div class="row">

        <div class="col-md-12">
            <div class="ibox-content">

                <h2 class="font-bold text-center">Forgot password</h2>

                <p>
                    Enter your email address and your password will be reset and emailed to you.
                </p>

                <div class="row">

                    <div class="col-lg-12">
                    	  <%= form_for(:password_reset, url: password_resets_path,class: "m-t",role: "form") do |f| %>
                            <div class="form-group">
                            	 <%= f.email_field :email, class: 'form-control',placeholder: "Email address", required: true %>
                            </div>
														<%= f.submit "Submit", class: "btn btn-primary block full-width m-b" %>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
<%= render 'layout_shares/empty_layout_footer' %>
</div>



