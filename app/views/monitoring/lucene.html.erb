<% provide(:title, "Spiders") %>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-3">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <span class="label label-success pull-right">Status</span>
          <h5>集群名称</h5>
        </div>
        <div class="ibox-content">
          <h1 class="no-margins"><%=@cluster["cluster_name"]%></h1>
          <div class="stat-percent font-bold text-success">100% <i class="fa fa-level-down"></i></div>
          <small></small>
        </div>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <span class="label label-success pull-right">Status</span>
          <h5>集群状态</h5>
        </div>
        <div class="ibox-content">
          <h1 class="no-margins"><%=@cluster["active_shards_percent_as_number"]%></h1>
          <div class="stat-percent font-bold text-success">100% <i class="fa fa-level-down"></i></div>
          <small></small>
        </div>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <span class="label label-success pull-right">Nodes</span>
          <h5>集群节点数</h5>
        </div>
        <div class="ibox-content">
          <h1 class="no-margins"><%=@cluster["number_of_nodes"]%></h1>
          <div class="stat-percent font-bold text-success">100% <i class="fa fa-bolt"></i></div>
          <small></small>
        </div>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <span class="label label-success pull-right">DataNodes</span>
          <h5>数据节点数</h5>
        </div>
        <div class="ibox-content">
          <h1 class="no-margins"><%=@cluster["number_of_data_nodes"]%></h1>
          <div class="stat-percent font-bold text-success">100% <i class="fa fa-level-up"></i></div>
          <small></small>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <span class="label label-info pull-right">Shards</span>
          <h5>总分片数</h5>
        </div>
        <div class="ibox-content">
          <h1 class="no-margins"><%=@cluster["active_shards"]%></h1>
          <div class="stat-percent font-bold text-info">100% <i class="fa fa-level-down"></i></div>
          <small></small>
        </div>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <span class="label label-info pull-right">Primary</span>
          <h5>主分片数</h5>
        </div>
        <div class="ibox-content">
          <h1 class="no-margins"><%=@cluster["active_primary_shards"]%></h1>
          <div class="stat-percent font-bold text-info">100% </div>
          <small></small>
        </div>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <span class="label label-info pull-right">Unassigned</span>
          <h5>未分配分片</h5>
        </div>
        <div class="ibox-content">
          <h1 class="no-margins"><%=@cluster["unassigned_shards"]%></h1>
          <div class="stat-percent font-bold text-info">100% <i class="fa fa-level-down"></i></div>
          <small></small>
        </div>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <span class="label label-info pull-right">Delayed</span>
          <h5>丢失分片</h5>
        </div>
        <div class="ibox-content">
          <h1 class="no-margins"><%=@cluster["delayed_unassigned_shards"]%></h1>
          <div class="stat-percent font-bold text-info">100% <i class="fa fa-level-down"></i></div>
          <small></small>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>列表信息</h5>
        </div>
        <!--  <div class="ibox-content pl15">
          <div class="bg-search">
          </div>
        </div> -->
        <div id="result_release">
          <div class="ibox-content table-sql">
            <ul class="tab-ul clear-p">
              <li class="tab-li active">
                <a href="#" data-target="all-page">节点</a>
              </li>
            </ul>
            <div class="ibox-content p15-0 all-page table-content">
              <%= render "list_body" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--这里是提示框-->
<div id="modal-form-remove" class="modal fade in" aria-hidden="true">
  <div class="modal-dialog" style="width: 460px;top: 190px;">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-12">
            <h3 class="m-t-none m-b">提示</h3>
            <div class="hr-line-dashed"></div>
            <p class="text-center">
              <strong style="font-size: 14px;">您确定要删除<span class="remove-html"></span>吗？</strong></p>
            <div class="hr-line-dashed"></div>
            <div>
              <button class="btn btn-sm btn-primary pull-right m-t-n-xs sure-remove" type="button" style="margin-left: 20px;">
                <strong>确定</strong></button>
              <button class="btn btn-sm btn-primary pull-right m-t-n-xs cancel-remove" type="button"  style="">
                <strong>取消</strong></button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :javascript do %>
<% end %>