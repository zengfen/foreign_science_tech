<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <!-- 添加form -->
        <%= form_tag({:action=>action},{:class=>"form-horizontal"}) do %>
          <div class="form-group">
            <label class="col-sm-2 control-label">配置字段(key)</label>
            <div class="col-sm-10">
              <%= text_field_tag :setting_key,(@setting.blank? ? "":@setting.keys.first),{:placeholder=>"配置字段(key)",:class=>"form-control",:required=>true,:readonly=>(action=="update")} %>  
            </div>
          </div>
          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <label class="col-sm-2 control-label">配置详情(value)</label>
            <div class="col-sm-10">
             <%= text_area_tag :setting_value,(@setting.blank?? "":@setting.values.first),{:class=>"form-control"} %>
            </div>
          </div>

          <div class="hr-line-dashed"></div>
          <div class="form-group">
              <div class="col-sm-2 col-sm-offset-10">
                  <button class="btn btn-primary" type="submit">保存</button>
              </div>
          </div>
       <%end%>
      </div>
    </div>
  </div>

</div>
