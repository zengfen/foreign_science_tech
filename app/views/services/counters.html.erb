<% provide(:title, "Host") %>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>完整数据量监控</h5>
        </div>

        <div class="ibox-content pl15">
          <div class="bg-search">
          </div>
        </div>
        <div id="result_release">
          <div class="ibox-content table-sql">
            <ul class="tab-ul clear-p">
              <li class="tab-li active">
                <a href="#" data-target="all-page"></a>
              </li>
            </ul>

            <div class="ibox-content p15-0 all-page table-content">
              <table class="table table-striped table-bordered table-hover table-vcenter">
                <thead>
                  <tr>
                    <th class="text-center">时间</th>
                    <th class="text-center">任务</th>
                    <th class="text-center">错误任务</th>
                    <th class="text-center">完成任务</th>
                    <th class="text-center">Loader Kafka</th>
                    <th class="text-center">Loader Tidb</th>
                    <th class="text-center">Dumper任务</th>
                    <th class="text-center">Dumper结果</th>
                    <th class="text-center">接收请求</th>
                    <th class="text-center">接收结果</th>
                    <th class="text-center">接收错误</th>
                    <th class="text-center">接收字节</th>
                  </tr>
                </thead>
                <tbody class="text-center">
                  <tr>
                    <td>总量</td>
                    <td><%= @results[1].task_count %></td>
                    <td><%= @results[1].discard_count %></td>
                    <td><%= @results[1].completed_count %></td>
                    <td><%= @results[1].result_count %></td>
                    <td><%= @results[1].loader_consume_count %></td>
                    <td><%= @results[1].loader_load_count %></td>
                    <td><%= @results[1].dumper_task_count %></td>
                    <td><%= @results[1].dumper_result_count %></td>
                    <td><%= @results[1].receiver_batch_count %></td>
                    <td><%= @results[1].receiver_result_count %></td>
                    <td><%= @results[1].receiver_error_count %></td>
                    <td><%= @results[1].receiver_bytes %></td>
                  </tr>
                  <% @results[0].each do |x| %>
                    <tr>
                      <td><%= Time.at(x.hour) %></td>
                      <td><%= x.task_count %></td>
                      <td><%= x.discard_count %></td>
                      <td><%= x.completed_count %></td>
                      <td><%= x.result_count %></td>
                      <td><%= x.loader_consume_count %></td>
                      <td><%= x.loader_load_count %></td>
                      <td><%= x.dumper_task_count %></td>
                      <td><%= x.dumper_result_count %></td>
                      <td><%= x.receiver_batch_count %></td>
                      <td><%= x.receiver_result_count %></td>
                      <td><%= x.receiver_error_count %></td>
                      <td><%= x.receiver_bytes %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

