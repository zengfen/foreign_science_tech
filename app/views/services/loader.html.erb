<% provide(:title, "Host") %>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Loader数据量监控</h5>
        </div>

        <div class="ibox-content pl15">
          <div class="bg-search">
          </div>
        </div>
        <% @loaders.each_with_index do |loader, i| %>
          <div id="result_release">
            <div class="ibox-content table-sql">
              <ul class="tab-ul clear-p">
                <li class="tab-li active">
                  <a href="#" data-target="all-page"><%= loader.ip %></a>
                </li>
              </ul>

              <div class="ibox-content p15-0 all-page table-content">
                <table class="table table-striped table-bordered table-hover table-vcenter">
                  <thead>
                    <tr>
                      <th class="text-center">时间</th>
                      <th class="text-center">消费kafka数</th>
                      <th class="text-center">Load数</th>
                      <th class="text-center">错误数</th>
                    </tr>
                  </thead>
                  <tbody class="text-center">
                    <tr>
                      <td>总量</td>
                      <td><%= @results[i][1].loader_consume_count %></td>
                      <td><%= @results[i][1].loader_load_count %></td>
                      <td><%= @results[i][1].loader_error_count %></td>
                    </tr>
                    <% @results[i][0].each do |x| %>
                      <tr>
                        <td><%= Time.at(x.hour) %></td>
                        <td><%= x.loader_consume_count %></td>
                        <td><%= x.loader_load_count %></td>
                        <td><%= x.loader_error_count %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        <% end %>
       </div>
    </div>
  </div>
</div>

