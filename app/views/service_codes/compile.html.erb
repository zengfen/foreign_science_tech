<% provide(:title, "Control Templates") %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>代码管理</h5>
        </div>

        <div class="ibox-content pl15">
        </div>
        <div id="result_release">

          <div class="ibox-content table-sql">
            <ul class="tab-ul clear-p">
              <li class="tab-li acive">
                <a href="#" data-target="all-page">代码管理</a>
              </li>
            </ul>

            <div class="ibox-content p15-0 all-page table-content" >
              <div class="row">
                <div class="col-lg-12">
                  <div class="ibox float-e-margins">
                    <div class="ibox-content">
                      <%= form_for(@code, url: "/servide_codes/do_compile",:html=>{:class=>"form-horizontal spider-task-form"}) do |f| %>
                        <input type="hidden" value="<%= @code.name %>" name="name"/>
                        <div class="form-group">
                          <label class="col-sm-2 control-label">名称</label>
                          <div class="col-sm-10">
                            <%= f.text_field :name, :placeholder=>"名称",:class=>"form-control", :disabled=>"true"%>
                          </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label">GOPATH</label>
                          <div class="col-sm-10">
                            <%= f.text_field :go_path, :placeholder=>"GOPATH",:class=>"form-control"%>
                          </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label">代码路径</label>
                          <div class="col-sm-10">
                            <%= f.text_field :code_path, :placeholder=>"代码路径",:class=>"form-control"%>
                          </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                          <label class="col-sm-2 control-label">代码分支</label>
                          <div class="col-sm-10">
                            <%= f.text_field :current_branch, :placeholder=>"代码分支",:class=>"form-control"%>
                          </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                          <div class="col-sm-2 col-sm-offset-10">
                            <button class="btn btn-primary submit_btn" type="submit">编译</button>
                          </div>
                        </div>
                      <%end%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

