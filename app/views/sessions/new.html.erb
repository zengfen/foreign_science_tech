<% provide(:title, "Login") %>
<div class="loginColumns animated fadeInDown">
  <div class="row">
    <div class="col-md-6">
      <h2 class="font-bold">数据采集国外系统</h2>
    </div>
    <div class="col-md-6">
      <div class="ibox-content">
        <%= form_for(:session, url: login_path) do |f| %>
          <form class="m-t" role="form" action="#">
            <div class="form-group">
              <%= f.text_field :email, class: 'form-control',placeholder: '用户名' ,required: true%>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control',placeholder: 'Password' ,required: true%>
            </div>
            <div class="form-group">
              <div class="i-checks">
                <label> <%= f.check_box :remember_me %>
                  <i></i> 记住我
                </label>
              </div>
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">登录</button>
          <%end%>
          <p class="m-t hidden">
            <small><%=copyright%>  &copy; <%=copyrightyear%></small>
          </p>
        </div>
      </div>
    </div>
    <hr />
    <%= render 'layout_shares/empty_layout_footer' %>
  </div>