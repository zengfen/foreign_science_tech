<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <!-- 添加form -->
        <%= form_for(@monitor, url: "",:html=>{:class=>"form-horizontal spider-task-form"}) do |f| %>
          <div class="form-group">
            <label class="col-sm-2 control-label">类型</label>
            <div class="col-sm-10">
              <%= f.select(:account_type, SocialAccountMonitor.account_types,{},{class: "form-control m-b"}) %>
            </div>
          </div>
          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <label class="col-sm-2 control-label">模板</label>
            <div class="col-sm-10">
              <%= f.select(:spider_id, @spiders ,{},{class: "form-control m-b"}) %>
            </div>
          </div>
          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <label class="col-sm-2 control-label">优先级</label>
            <div class="col-sm-10">
              <div id="iconrange_spider_task_level_num"></div>
              <%= f.hidden_field :level,:class=>"level_num"%>
            </div>
          </div>
          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <label class="col-sm-2 control-label">重试次数</label>
            <div class="col-sm-10">
              <div id="iconrange_spider_task_retry_num"></div>
              <%= f.hidden_field :max_retry_count, :class=>"retry_num"%>
            </div>
          </div>
          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <label class="col-sm-2 control-label">特殊标签</label>
            <div class="col-sm-10">
              <%= f.text_field :special_tag,:placeholder=>"特殊标签",:class=>"form-control"%>
            </div>
          </div>
          <div class="hr-line-dashed"></div>
          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <label class="col-sm-2 control-label">周期</label>
            <div class="col-sm-10">
              <%= f.select(:cycle_type, SocialAccountMonitor.cycle_types.invert, {},{class: "form-control m-b"}) %>
            </div>
          </div>
          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <div class="col-sm-2 col-sm-offset-10">
              <button class="btn btn-primary submit_btn" type="button">保存</button>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript" charset="utf-8">
$("#iconrange_spider_task_level_num").ionRangeSlider({
  min: 1,
  max: 10,
  from: 1,
  grid: true,
  grid_num: 9,
  onFinish: function (data) {
  $(".level_num").val(data.from);
}
});
  $("#iconrange_spider_task_retry_num").ionRangeSlider({
  min: 1,
  max: 10,
  grid: true,
  grid_num: 9,
  onFinish: function (data) {
  $(".retry_num").val(data.from);
}
});
  </script>
<% end %>
