<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <!-- 添加form -->
        <%= form_tag("/lucene/create_index",:html=>{:class=>"form-horizontal"}) do |f| %>
          <div class="form-group">
            <label class="col-sm-2 control-label">索引类别</label>
            <div class="col-sm-10">
              <%= f.select(:category,Spider.categories.to_a,{},{class: "form-control m-b"}) %>
            </div>
          </div>
          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <label class="col-sm-2 control-label">时间区间</label>
            <div class="col-sm-5">
              <div id="ionrange_3"></div>
              <%= f.text_field :start_time,:placeholder=>"开始时间",:class=>"form-control"%>
            </div>
            <div class="col-sm-5">
              <div id="ionrange_3"></div>
              <%= f.text_field :end_time,:placeholder=>"结束时间",:class=>"form-control"%>
            </div>
          </div>
          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <div class="col-sm-2 col-sm-offset-10">
              <button class="btn btn-primary" type="submit">保存</button>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>