<%if !@indices.blank?%>
  <table class="table table-striped table-bordered table-hover table-vcenter">
    <thead>
      <tr>
        <th class="text-center">索引名称</th>
        <th class="text-center">索引状态</th>
        <th class="text-center">加载状态</th>
        <th class="text-center">分片数量</th>
        <th class="text-center">副本数量</th>
        <th class="text-center">文档数量</th>
        <th class="text-center">文档大小</th>
        <!--    <th class="text-center">模板名称</th>
        <th class="text-center">附加条件</th>
        <th class="text-center">创建时间</th> -->
        <th colspan="5" class="text-center">操作</th>
      </tr>
    </thead>
    <tbody class="text-center">
      <% @indices.each do |inx| %>
        <%=render :partial=>"one_index_in_list",:locals=>{:inx=>inx}%>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @indices%>
  </div>
<%else%>
  <%= render "shared/no_data" %>
<%end%>