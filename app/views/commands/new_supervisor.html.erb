<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>执行命令</h5>
        </div>
        <div id="result_release">
          <div class="row">
            <div class="col-lg-12">
              <div class="ibox float-e-margins">
                <div class="ibox-content">
                  <!-- 添加form -->
                  <form method="post" action="/commands/create_supervisor" class="form-horizontal">

                    <div class="form-group"><label class="col-sm-2 control-label">选择</label>

                      <div class="col-sm-10">
                        <select class="form-control m-b" name="command">
                          <% @commands.each do |k, v| %>
                            <option value="<%= k %>"><%= v %></option>
                          <% end %>
                        </select>
                      </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                      <div class="col-sm-4 col-sm-offset-2">
                        <button class="btn btn-primary" type="submit">执行</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="row">

    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>当前命令</h5>
        </div>
        <div id="result_release">
          <div class="ibox-content table-sql">
            <ul class="tab-ul clear-p">
              <li class="tab-li active">
                <a href="#" data-target="all-page">详情</a>
              </li>
            </ul>

            <div class="ibox-content p15-0 all-page table-content">
              <table class="table table-striped table-bordered table-hover table-vcenter">
                <tbody class="text-center">
                  <% @statuses.each do |k, v| %>
                    <tr>
                      <td><%= k %></td>
                      <td><%= v %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <div class="text-center">
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

</div>

