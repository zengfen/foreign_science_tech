<%= form_for(@spider, :html => {:class => "form-horizontal"}) do |f| %>
  <input type="hidden" name="id" value="<%= params[:id] %>">
  <div class="form-group">
    <label class="col-sm-2 control-label">爬虫名</label>
    <div class="col-sm-10">
      <%= f.text_field :spider_name, :placeholder => "爬虫名", :class => "form-control", :required => true %>
    </div>
  </div>
  <div class="hr-line-dashed"></div>
  <div class="form-group">
    <label class="col-sm-2 control-label">网站名</label>
    <div class="col-sm-10">
      <%= f.text_field :name_en, :placeholder => "网站名", :class => "form-control", :required => true %>
    </div>
  </div>

  <div class="hr-line-dashed"></div>
  <div class="form-group">
    <div class="col-sm-12 text-right">
      <button class="btn btn-primary" type="submit">保存</button>
    </div>
  </div>
<% end %>
