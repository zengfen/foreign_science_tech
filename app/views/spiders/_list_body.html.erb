<%if !@spiders.blank?%>
  <table class="table table-striped table-bordered table-hover table-vcenter">
    <thead>
      <tr>
        <th class="text-center">爬虫名</th>
        <th class="text-center">周期爬虫状态</th>
        <th class="text-center">实时爬虫状态</th>
        <th class="text-center">爬取总量</th>
        <th class="text-center">报警</th>
        <th colspan="5" class="text-center">操作</th>
      </tr>
    </thead>
    <tbody class="text-center">
      <% @spiders.each do |spider| %>
        <%=render :partial=>"one_spider_in_list",:locals=>{:spider=>spider}%>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @spiders%>
  </div>
<%else%>
  <%= render "shared/no_data" %>
<%end%>