<% if page.current? %>
    <%= content_tag :a, page, remote: remote, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)),:class=>"btn btn-white active"  %>
<% else %>
    <%= link_to page, url, remote: remote, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)),:class=>"btn btn-white" %>
<% end %>
